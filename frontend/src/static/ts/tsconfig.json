{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "removeComments": false,
    "outDir": "../js",
    "sourceMap": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "composite": true
  },
  "include": ["env.d.ts", "./*.ts"],
  "exclude": ["node_modules"]
}
